{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

{% block body %}
  {% for flash_error in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
  {% endfor %}
<!-- <div class="auth flex-center container"> -->
  <div class=" auth d-flex">
    <div class="img">
    </div>
    <div class="content">
      <h1 class="text-center">Inscription</h1>
      {{ form_start(registrationForm) }}
      <div class="form-floating mb-3">
        {{ form_row(registrationForm.firstName, {label:'Pr√©nom', attr:{class:'form-control', placeholder:"Julie"}}) }}
      </div>
      {{ form_row(registrationForm.name, {label:'Nom', attr:{placeholder:'Du Pont'}}) }}
      {{ form_row(registrationForm.email, {label:'Email', attr:{placeholder:'juliedupont@exemple.com'}}) }}
      {{ form_row(registrationForm.address, {label:'Adresse', attr:{placeholder:'Adresse'}}) }}
      {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe', attr:{placeholder:'Mot de passe'}
            }) }}
      {{ form_row(registrationForm.agreeTerms) }}
  
      <div class="d-flex align-items-center justify-content-between gap-4 mt-4">
        <button type="submit" class="btnc btnc-light">S'inscrire</button>
        <div>
          Vous avez un compte ? 
          <a href="{{ path('app_login') }}" class="text-underline textc-warning">Se connecter</a>
        </div>
      </div>
    </div>
  <!-- </div> -->
</div>

  {{ form_end(registrationForm) }}
{% endblock %}
