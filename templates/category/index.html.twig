{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}

<div class="container section category">
    <h1 class="mt-10 text-center text-uppercase">Toutes les catégories</h1>
    <div class="mt-5 mb-5 d-flex justify-content-between">
        <div class="text-bold">{{categories | length}} Catégories</div>
        <div>
            <a href="#" class="btnc btnc-light ">Trier</a>
        </div>
    </div>
    <div class="">
        {% for category in categories %}
            <a href="{{ path( 'category_products', {id:category.id}) }}">
                <div class="card-category p-3 my-2">
                    {{category.name}}
                </div>
            </a>
        {% endfor %}
    </div>
</div>
{% endblock %}
