{% if maxPages > 1 %}
    <div class="mt-5 d-flex justify-content-end">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item {{ currentPage == 1 ? 'disabled' : ''}}">
                    <a class="page-link"
                        href="{{ path(pathName, {page: currentPage-1 < 1 ? 1 : currentPage-1}) }}">Précédent</a>
                </li>
                {% for i in 1..maxPages %}
                <li class="page-item {{ currentPage == i?'active':''}}">
                    <a class="page-link" href="{{ path(pathName, {page: i}) }}">{{ i }}</a>
                </li>
                {% endfor %}
                <li class="page-item {{currentPage >= maxPages ? 'disabled':'' }}">
                    <a class="page-link"
                        href="{{ path(pathName, {page: currentPage+1 <= maxPages ? currentPage+1 : currentPage}) }}">Suivant</a>
                </li>
            </ul>
        </nav>
    </div>
    {% endif %}