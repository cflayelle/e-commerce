{% for product in products %}
<div>
    <a href="{{ path( 'show_product', {id:product.id}) }}">
        <article class="card-product">
            <div class="card-image">
                <div class="image-container">
                    <img class="user-select-none"
                    src="{{ vich_uploader_asset(product)}}"
                    alt="">
                </div>
            </div>
            <div class="card-content">
                <div>
                    <h1 class="card-title">
                        {{product.name}}
                    </h1>
                    <div class="d-flex align-items-center">
                        <img src="{{ asset('/images/utils/stars.png') }}" class="mr-2" alt="stars" width="90">
                        <span>12</span>
                    </div>
                </div>
                <div class="d-flex justify-content-center align-items-start">
                    <a href="{{path('app_cart_add', {id:product.id})}}" class="btnc btnc-primary add-cart">
                        Ajouter au panier  {{ product.price }} â‚¬
                    </a>  
                </div>       
            </div>
        </article>
    </a>
</div>
{% endfor %}