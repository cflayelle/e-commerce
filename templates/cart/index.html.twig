{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}

  <div class="example-wrapper">
    <h1>Votre Panier</h1>
    <table class="table table-hover table-light table-striped">
      <thead>
        <tr class="table-dark">
          <th scope="col">Produit</th>
          <th scope="col">Quantit√©</th>
          <th scope="col">Prix</th>
          <th scope="col">Stock</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for cartElement in cartElements %}
          <tr class="">
            <th>{{cartElement.product.name}}</th>
            <td>{{cartElement.quantity}}</td>
            <td>{{cartElement.product.price}}</td>
            <td>{{cartElement.product.stock}}</td>
            <td>
              <a href="{{path('app_cart_add',{id:cartElement.product.id})}}" class="btn btn-outline-primary btn-sm">Ajouter</a>
              <a href="{{path('app_cart_remove',{id:cartElement.product.id})}}" class="btn btn-outline-warning btn-sm">Retirer</a>
              <a href="{{path('app_cart_delete',{id:cartElement.product.id})}}" class="btn btn-outline-danger btn-sm">Supprimer</a>
            </td>
          </tr>
          {% else %}
          <tr class="">
            <td colspan="6">Votre est pannier est vide</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
